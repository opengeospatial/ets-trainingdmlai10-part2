{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost:8000/namedValue.json",
    "title": "NamedValue",
    "type": "object",
    "required": [
        "key",
        "value"
    ],
    "properties": {
        "key": {
            "type": "string"
        },
        "value": {
            "$comment": "The type of the value is 'any'.",
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                },
                {
                    "type": "number"
                },
                {
                    "type": "array"
                },
                {
                    "type": "boolean"
                },
                {
                    "type": "null"
                }
            ]
        }
    }
}